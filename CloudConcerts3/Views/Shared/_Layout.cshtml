<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cloud Concerts</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jquery-frontier-cal-1.3.2.css")
    @Styles.Render("~/Content/jquery-ui-1.8.1.custom.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img id="logo_icon" alt="Brand" src="~/Resources/cloud_icon.png" style="max-height:50px;margin-left:10px;">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (ViewContext.HttpContext.User.IsInRole("admin"))
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Databases <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Artists", "Index", "Artists")</li>
                                <li>@Html.ActionLink("Genres", "Index", "Genres")</li>
                                <li>@Html.ActionLink("Members", "Index", "Members")</li>
                                <li>@Html.ActionLink("Hosts", "Index", "Hosts")</li>
                                <li>@Html.ActionLink("Concerts", "Index", "Concerts")</li>
                                <li>@Html.ActionLink("Listeners", "Index", "Listeners")</li>
                            </ul>
                        </li>
                    }
                    <li class="dropdown">
                        <a href="@Url.Action("Index", "Browse")" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Browse <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Artists", "Artists", "Browse")</li>
                            <li>@Html.ActionLink("Hosts", "Hosts", "Browse")</li>
                            <li>@Html.ActionLink("Concerts", "Concerts", "Browse")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Calendar", "Calendar", "Browse")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cloud Concerts</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery-1.4.2-ie-fix.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.8.1.custom.min.js")
    @Scripts.Render("~/Scripts/jquery.qtip-1.0.js")
    @Scripts.Render("~/Scripts/jshashtable-2.1.js")
    @Scripts.Render("~/Scripts/jquery-frontier-cal-1.3.2.min.js")
    @Scripts.Render("~/Scripts/calendarscript.js")
    @Scripts.Render("~/Scripts/myscript.js")
    @RenderSection("scripts", required: false)
</body>
</html>
